
Interface_3:

    orientation: "vertical"
    MDTopAppBar:
        title: "Curl App"
        elevation: 0
        md_bg_color: app.theme_cls.accent_color
        specific_text_color: app.theme_cls.primary_color
        left_action_items: [["arrow-left", lambda x: root.back(), "Go Back"]]
        right_action_items: [["paperclip", lambda x: root.right_action(x)], ["calendar-today", lambda x: root.right_action(x)]]

    MDBottomNavigation:

        MDBottomNavigationItem:

            name: "Screen_1"
            text: "News"
            icon: "newspaper-variant-multiple-outline"
            Screen_1:
        
        MDBottomNavigationItem:

            name: "Screen 2"
            text: "Global"
            icon: "search-web"
            Screen_2:
        
        MDBottomNavigationItem:

            name: "Screen 3"
            text: "thending"
            icon: "chart-bar-stacked"
            Screen_3:                    

<Screen_1>:
    MDBoxLayout:
        
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        radius:25
        md_bg_color: app.theme_cls.primary_color
        

        
        MDLabel:

            text: root.my_text
            theme_text_color: "Custom"
            text_color: app.theme_cls.accent_color
            halign: "center"
            font_size: '64sp'

        MDRaisedButton:
            text: "Type-I"
            pos_hint: {"center_y": .6, "center_x": .5}
            on_press: root.imprimir()      
            

<Screen_2>:
    MDBoxLayout:
        
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        radius:25
        md_bg_color: app.theme_cls.primary_color
        
        MDLabel:

            text: root.my_text2
            theme_text_color: "Custom"
            text_color: app.theme_cls.accent_color
            halign: "center"
            font_size: '64sp'

<Screen_3>:
    MDBoxLayout:
        
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        radius:25
        md_bg_color: app.theme_cls.primary_color
        
        MDLabel:

            text: "Screen_3"
            theme_text_color: "Custom"
            text_color: app.theme_cls.accent_color
            halign: "center"
            font_size: '64sp'
        
          
